{
  "name": "personal-dashboard",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "deploy:cloudflare": "npm run build && npx wrangler pages deploy",
    "test": "vitest --config config/vitest.config.ts",
    "test:watch": "vitest --watch --config config/vitest.config.ts",
    "test:coverage": "vitest --coverage --config config/vitest.config.ts",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:check": "npm audit --audit-level moderate",
    "lint": "eslint . --ext .ts,.js,.svelte",
    "lint:fix": "eslint . --ext .ts,.js,.svelte --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "svelte-check --tsconfig ./tsconfig.json",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-node": "^5.2.13",
    "@sveltejs/adapter-vercel": "^5.10.3",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/svelte": "^4.2.1",
    "@types/node": "^18.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "autoprefixer": "^10.4.0",
    "jsdom": "^22.1.0",
    "postcss": "^8.4.0",
    "svelte": "^4.2.0",
    "svelte-preprocess": "^5.0.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "chart.js": "^4.5.0",
    "papaparse": "^5.4.1",
    "svelte-chartjs": "^3.1.5"
  }
}
